<h3>My Stocks:</h3>

<% if (stocky.length === 0) { %>
    <h2> You have no stocks!</h2>
<% } %>
<% if (stocky.length === 1) { %>
    <% myStocks.forEach(stocks => { %>
        <% stockAPI.price %>
        <% const currentPrice = stockAPI.price %>
        <% const roundedPrice = Number(currentPrice).toFixed(2) %>
        <% console.log("CURRENTPRICE!:", roundedPrice) %>
        <h2>Name: <a href="/stocks/<%= stocks.id%>"><%= stocks.stock_symbol %></a></h2>
        <p>Average Price Bought: <%= `$${stocks.price_bought}` %></p>
        <p># of Shares Bought: <%= stocks.shares_bought %></p>  
        <p>Current Stock Price: <%= roundedPrice %></p>
        <p>Market Value: <%= `$${(roundedPrice)*(stocks.shares_bought)}` %></p>
        <p>Profit/Loss: <%= `$${((roundedPrice)*(stocks.shares_bought))-((stocks.price_bought)*(stocks.shares_bought))}` %></p>


    <% }) %>
<% } else { %>
        <% myStocks.forEach(stocks => { %>
        <% stockAPI[stocks.stock_symbol].price %>
        <% const currentPrice = stockAPI[stocks.stock_symbol].price %>
        <% const roundedPrice = Number(currentPrice).toFixed(2) %>
        <% const marketValue = (roundedPrice)*(stocks.shares_bought) %>
        <% const roundedMarketValue = Number(marketValue).toFixed(2) %>
        <% const gains = ((roundedPrice)*(stocks.shares_bought))-((stocks.price_bought)*(stocks.shares_bought)) %>
        <% const roundedGains = Number(gains).toFixed(2) %>

        <h2>Name: <a href="/stocks/<%= stocks.id%>"><%= stocks.stock_symbol %></a></h2>
        <p>Average Price Bought: <%= `$${stocks.price_bought}` %></p>
        <p># of Shares Bought: <%= stocks.shares_bought %></p>  
        <p>Current Stock Price: <%= roundedPrice %></p>
        <p>Market Value: <%= `$${roundedMarketValue}` %></p>
        <p>Profit/Loss: <%= `$${roundedGains}` %></p>
    
       
    
    <% }) %>
<% } %>
    

